<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/draw_oval_stroke"
        android:src="@drawable/ic_doctor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/img_avatar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/img_avatar"
        android:alpha="0.12"
        android:background="#000000" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_specialty"
        android:layout_alignTop="@+id/img_avatar"
        android:text="Arthur Cordov"
        android:textColor="#212121"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_specialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/divider"
        android:layout_below="@+id/tv_name"
        android:text="Cardiologista"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_crm"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_name"
        android:layout_marginEnd="8dp"
        android:gravity="end"
        android:textColor="@android:color/darker_gray"
        android:text="CRM: 54987/SC"
        android:textSize="10sp" />

</RelativeLayout>