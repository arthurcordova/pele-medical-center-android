<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobway.pelemedicalcenter.fragments.FilterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EBEBF1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="12dp"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="Cidade:"
                        android:textColor="#555555"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@+id/textView34"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:text="Maceió"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textColor="#212121"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="Especialidades"
                android:textColor="#555555"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:background="#EBEBF1"
                android:scrollIndicators="none"
                android:scrollbars="none">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#EBEBF1" />

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="Clínica:"
                        android:textColor="#555555"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@+id/textView"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textColor="#212121"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="Tipo da consulta:"
                        android:textColor="#555555"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button_consult_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@+id/textView8"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:textAlignment="textEnd"
                        android:textColor="#212121"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button_consult_type_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="8dp"
                        android:layout_toEndOf="@+id/textView8"
                        android:background="@android:color/transparent"
                        android:textAlignment="textEnd"
                        android:textColor="#212121"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text123"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="Convênio:"
                        android:textColor="#555555"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@+id/text123"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textColor="#212121"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:visibility="gone"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="Expressa:"
                        android:textColor="#555555"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/switch_emergency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:theme="@style/SwitchTheme" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_apply_filter"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="32dp"
            android:background="#3E93D8"
            android:fontFamily="sans-serif-medium"
            android:text="Buscar médicos"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>

</FrameLayout>
