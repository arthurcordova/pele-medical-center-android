<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobway.pelemedicalcenter.fragments.FilterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EBEBF1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="32dp"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="Emergência:"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/switch_emergency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:theme="@style/SwitchTheme" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="Particular:"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/switch_private"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:theme="@style/SwitchTheme" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-light"
                android:text="Especialidades"
                android:textColor="#555555"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:background="#EBEBF1">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#EBEBF1" />

            </HorizontalScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/button_apply_filter"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="#3E93D8"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-medium"
            android:text="Buscar médicos"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:textSize="14sp" />

    </RelativeLayout>

</FrameLayout>
